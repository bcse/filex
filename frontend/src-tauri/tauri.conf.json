{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Filex",
  "version": "0.1.0",
  "identifier": "com.filex.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Filex",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": "((mailto:\\\\w+)|(tel:\\\\w+)|(https?://\\\\w+)|(file://)).+"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/icon.iconset/icon_16x16.png",
      "icons/icon.iconset/icon_32x32.png",
      "icons/icon.iconset/icon_32x32@2x.png",
      "icons/icon.iconset/icon_128x128.png",
      "icons/icon.iconset/icon_256x256.png",
      "icons/icon.iconset/icon_512x512.png",
      "icons/icon.iconset/icon_512x512@2x.png",
      "icons/icon-tahoe.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
